<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvaro.seniorfitness">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:label="@string/app_name"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.FuerzaBrazosActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_fuerza_brazos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FuerzaPiernasActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_fuerza_piernas">
        </activity>
        <activity
            android:name=".activities.ResistenciaAerobicaActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_resistencia_aerobica">
        </activity>
        <activity
            android:name=".activities.AgilidadActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_agilidad">
        </activity>
    </application>

</manifest>