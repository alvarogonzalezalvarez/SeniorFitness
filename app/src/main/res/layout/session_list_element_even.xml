<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/sessiontext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Android Profile UI Design" />

    <ImageView android:id="@+id/continuesession"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentRight="true"
        android:contentDescription="continue"
        android:elevation="4dp"
        android:src="@drawable/continuesession"/>

    <ImageView android:id="@+id/showresults"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentRight="true"
        android:contentDescription="stats"
        android:elevation="4dp"
        android:src="@drawable/stats"/>

</RelativeLayout>